<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <groupId>org.apache.activemq</groupId>
   <artifactId>artemis-load-generator</artifactId>
   <version>2.0.0-SNAPSHOT</version>

   <!-- Properties -->
   <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <openhft.affinity.version>3.0.6</openhft.affinity.version>
      <org.hdrhistogram.version>2.1.9</org.hdrhistogram.version>
      <openjdk.jmh.version>1.19</openjdk.jmh.version>
      <agrona.version>0.9.0</agrona.version>
   </properties>

   <build>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.8</source>
               <target>1.8</target>
            </configuration>
         </plugin>
         <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
               <execution>
                  <id>build-statistics-summary-generator</id>
                  <configuration>
                     <appendAssemblyId>false</appendAssemblyId>
                     <archive>
                        <manifest>
                           <mainClass>org.apache.activemq.load.generator.StatisticsSummaryGenerator</mainClass>
                        </manifest>
                     </archive>
                     <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                     </descriptorRefs>
                     <finalName>statistics-summary-generator</finalName>
                  </configuration>
                  <phase>package</phase>
                  <goals>
                     <goal>single</goal>
                  </goals>
               </execution>
               <execution>
                  <id>build-destination-bench</id>
                  <configuration>
                     <appendAssemblyId>false</appendAssemblyId>
                     <archive>
                        <manifest>
                           <mainClass>org.apache.activemq.load.generator.DestinationBench</mainClass>
                        </manifest>
                     </archive>
                     <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                     </descriptorRefs>
                     <finalName>destination-bench</finalName>
                  </configuration>
                  <phase>package</phase>
                  <goals>
                     <goal>single</goal>
                  </goals>
               </execution>
               <execution>
                  <id>build-flush-scale-latency-bench</id>
                  <configuration>
                     <appendAssemblyId>false</appendAssemblyId>
                     <archive>
                        <manifest>
                           <mainClass>org.apache.activemq.load.generator.FlushScaleLatencyBench</mainClass>
                        </manifest>
                     </archive>
                     <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                     </descriptorRefs>
                     <finalName>flush-scale-latency-bench</finalName>
                  </configuration>
                  <phase>package</phase>
                  <goals>
                     <goal>single</goal>
                  </goals>
               </execution>
               <execution>
                  <id>build-histogram-generator</id>
                  <configuration>
                     <appendAssemblyId>false</appendAssemblyId>
                     <archive>
                        <manifest>
                           <mainClass>org.apache.activemq.load.generator.HistogramGenerator</mainClass>
                        </manifest>
                     </archive>
                     <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                     </descriptorRefs>
                     <finalName>histogram-generator</finalName>
                  </configuration>
                  <phase>package</phase>
                  <goals>
                     <goal>single</goal>
                  </goals>
               </execution>
               <execution>
                  <id>single-writer-bench</id>
                  <configuration>
                     <appendAssemblyId>false</appendAssemblyId>
                     <archive>
                        <manifest>
                           <mainClass>org.apache.activemq.load.generator.SingleWriterBatchingBenchmark</mainClass>
                        </manifest>
                     </archive>
                     <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                     </descriptorRefs>
                     <finalName>single-writer-bench</finalName>
                  </configuration>
                  <phase>package</phase>
                  <goals>
                     <goal>single</goal>
                  </goals>
               </execution>
               <execution>
                  <id>latency-text-writer</id>
                  <configuration>
                     <appendAssemblyId>false</appendAssemblyId>
                     <archive>
                        <manifest>
                           <mainClass>org.apache.activemq.load.generator.LatencyRecordingTextWriter</mainClass>
                        </manifest>
                     </archive>
                     <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                     </descriptorRefs>
                     <finalName>latency-text-writer</finalName>
                  </configuration>
                  <phase>package</phase>
                  <goals>
                     <goal>single</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>

   <dependencies>
      <dependency>
         <groupId>org.apache.geronimo.specs</groupId>
         <artifactId>geronimo-jms_1.1_spec</artifactId>
         <version>1.1.1</version>
      </dependency>
      <dependency>
         <groupId>org.hdrhistogram</groupId>
         <artifactId>HdrHistogram</artifactId>
         <version>${org.hdrhistogram.version}</version>
      </dependency>
      <dependency>
         <groupId>net.openhft</groupId>
         <artifactId>affinity</artifactId>
         <version>${openhft.affinity.version}</version>
      </dependency>

      <!-- ### Java Microbenchmark Harness -->
      <dependency>
         <groupId>org.openjdk.jmh</groupId>
         <artifactId>jmh-core</artifactId>
         <version>${openjdk.jmh.version}</version>
         <!-- License: GPLv2-->
      </dependency>
      <dependency>
         <groupId>org.openjdk.jmh</groupId>
         <artifactId>jmh-generator-annprocess</artifactId>
         <version>${openjdk.jmh.version}</version>
         <!-- License: GPLv2-->
      </dependency>
      <dependency>
         <groupId>org.jctools</groupId>
         <artifactId>jctools-core</artifactId>
         <version>2.1.0</version>
      </dependency>
      <dependency>
         <groupId>org.agrona</groupId>
         <artifactId>Agrona</artifactId>
         <version>${agrona.version}</version>
      </dependency>
      <dependency>
         <groupId>org.apache.activemq</groupId>
         <artifactId>artemis-jms-client</artifactId>
         <version>2.4.0-SNAPSHOT</version>
      </dependency>
      <dependency>
         <groupId>org.apache.activemq</groupId>
         <artifactId>activemq-client</artifactId>
         <version>5.14.1</version>
      </dependency>
      <dependency>
         <groupId>org.apache.qpid</groupId>
         <artifactId>qpid-jms-client</artifactId>
         <version>0.23.0</version>
      </dependency>
      <dependency>
         <groupId>junit</groupId>
         <artifactId>junit</artifactId>
         <version>4.12</version>
      </dependency>
   </dependencies>


</project>